<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">


            <!-- Specify a dark  border -->
            <stroke
                android:width="6dp"
                android:color="#ffff" />

            <solid
                android:color="#13505B"
                />

            <!-- Specify the margins that all content inside the drawable must adhere to -->
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp" />

            <corners
                android:radius="10dp"   >
            </corners>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">


            <!-- Specify a dark  border -->
            <stroke
                android:width="6dp"
                android:color="#ffff" />

            <solid
                android:color="#0c343b"
                />

            <!-- Specify the margins that all content inside the drawable must adhere to -->
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp" />

            <corners
                android:radius="10dp"   >
            </corners>
        </shape>
    </item>
</selector>